    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_marginTop="45dp"
        android:id="@+id/start_button"
        android:text="NEXT"
        android:layout_gravity="center"
        android:textSize="20sp" />

</LinearLayout>
