<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_playing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:isScrollContainer="true"
    android:layout_marginTop="15dp"
    tools:context="com.example.atul.handcricket.Playing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/wickets"
            android:text="0"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:text="Wickets"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:id="@+id/text_score"
            android:layout_toLeftOf="@id/wickets" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/player_1"
            android:text="Player"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/player1_run"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@id/player_1"
            android:layout_marginLeft="8dp"
            android:text="0"
            android:textAlignment="textStart"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/runs"
            android:text="0"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:text="Runs"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:id="@+id/text_runs"
            android:layout_toLeftOf="@id/runs" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_overs"
            android:text="Overs"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/over"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@id/text_overs"
            android:layout_marginLeft="8dp"
            android:text="0.0"
            android:textAlignment="textStart"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/player2_run"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="Player"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginRight="12dp"
            android:id="@+id/player_2"
            android:layout_toLeftOf="@id/player2_run" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/target"
            android:text=""
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="South Africa"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/team2"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="South Africa"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/team1"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/image1"
            android:scaleType="fitXY"
            android:src="@drawable/hand_welcome"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/image2"
            android:scaleType="fitXY"
            android:src="@drawable/hand_welcome"
            android:layout_marginLeft="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/one"
            android:textAlignment="center"
            android:text="One"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/two"
            android:textAlignment="center"
            android:text="Two"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/three"
            android:textAlignment="center"
            android:text="Three"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/six"
            android:textAlignment="center"
            android:text="Six"
            android:layout_marginTop="17dp"
            android:layout_alignBaseline="@+id/four"
            android:layout_alignBottom="@+id/four"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/four"
            android:textAlignment="center"
            android:text="Four"
            android:layout_below="@+id/one"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/five"
            android:textAlignment="center"
            android:text="Five"
            android:layout_alignBaseline="@+id/four"
            android:layout_alignBottom="@+id/four"
            android:layout_alignStart="@+id/two" />

    </RelativeLayout>

</LinearLayout>
